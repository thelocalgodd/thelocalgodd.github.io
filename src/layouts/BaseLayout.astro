---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import Loader from "../components/Loader.astro";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { pageTitle, description, image = "/placeholder.png" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Analytics -->
    <script
      defer
      src="https://analytics.us.umami.is/script.js"
      data-website-id="f2eb0fb3-2348-4483-89a8-56906584f090"></script>

    <!-- Primary Meta Tags -->
    <title>{pageTitle} | tlg</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <link rel="canonical" href={canonicalURL} />

    <!-- Meta Tags Generated with https://metatags.io -->

    <script defer>
      fetch("https://analytics.thelocalgodd.me/api", {
        // fetch("http://localhost:3002/api", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          screenWidth: window.innerWidth,
        }),
      });
    </script>

    <!-- Add Socket.IO client -->
    <script is:inline src="https://cdn.socket.io/4.8.1/socket.io.min.js"></script>
    <script>
      // Connect to your WebSocket server
      const socket = io("https://analytics.thelocalgodd.me", {
        transports: ["websocket"],
        secure: false,
        reconnection: true,
        reconnectionAttempts: 5,
        reconnectionDelay: 1000,
        reconnectionDelayMax: 5000,
      });

      // Send visitor data when page loads
      socket.emit("new-visitor", {
        screenWidth: window.innerWidth,
        path: window.location.pathname,
        timestamp: new Date().toISOString(),
        userAgent: navigator.userAgent

      }, () => {
        console.log("Visitor data sent");
      });

      // Optional: Listen for other visitors if you want to show real-time stats
      socket.on("new-visitor", (data: {screenWidth: number, path: string, timestamp: string, userAgent: string}) => {
        console.log("New visitor:", data);
      });
    </script>

    <title>{pageTitle}</title>
    <ViewTransitions />
    <Loader />
  </head>
  <body class="md:sm:w-[800px] mx-auto *:select-none">
    <Header />
    <div class="flex items-center mt-16 mb-8">
      <div>
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
