---
// destructuring the props object
const { name } = Astro.props;

const nameArr = name.split(",");
---

{
  nameArr.map((name) => (
    <div
      class="border border-solid w-fit text-[11px]
     border-blue-400 px-2 py-[0.5px] rounded-xl mx-0.5 mt-1"
    >
      <p>{name}</p>
    </div>
  ))
}
