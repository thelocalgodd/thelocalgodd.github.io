---
import ProjectCard from "../components/ProjectCard.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import projectItems from "../lib/projects.js";
import { TelegramIcon } from "../components/icons/icons.jsx";
import BlogPost from "../components/BlogPost.astro";
const blogPosts = await Astro.glob("../pages/posts/*.md");

const formatDate = (isoString: string): string => {
  const date = new Date(isoString);
  const options: Intl.DateTimeFormatOptions = {
    year: "numeric",
    month: "long",
    day: "numeric",
  };
  return date.toLocaleDateString(undefined, options);
};
---

<BaseLayout pageTitle="hello">
  <section
    id="welcome"
    class="flex flex-col-reverse md:flex-row items-center md:justify-center mx-4 md:mx-auto"
  >
    <div class="rounded-xl md:mr-16 text-sm">
      <p
        class="inline-block text-sm mt-2 mb-4 rounded-lg border border-blue-200 bg-blue-100 bg-opacity-50 px-2 dark:border-green-800 dark:bg-green-300 dark:bg-opacity-10 dark:text-green-500"
      >
      👋 welcome
      </p>
      <p>
        Hello! I'm <span class="dark:text-zinc-400 text-blue-400"
          >Vincent Kwaku Kpemlie</span
        >, an aspiring Software Engineer and Cybersecurity Enthusiast - welcome
        to my portfolio website.
        <br />
        <br />
        On this site, you'll find information about me, <a
          class="text-sm mt-2 mx-0.5 rounded-lg bg-blue-100 bg-opacity-50 px-2 dark:bg-green-300 dark:bg-opacity-10 dark:text-green-500"
          href="/blog"
          >my blog posts
        </a>
        and <a
          class="text-sm mt-2 rounded-lg bg-blue-100 bg-opacity-50 px-2 dark:bg-blue-300 dark:bg-opacity-10 dark:text-blue-500"
          href="/projects">my projects</a
        >.
        <br /> I am currently learning -
        <span class="text-blue-600"> Solidity for Blockchain Development.</span>
        <br />
        <br />
      </p>
      <div>
        <button>
          <a
            class="text-sm rounded-lg border border-blue-200 bg-blue-100 bg-opacity-50 px-2 dark:border-blue-800 dark:bg-blue-300 dark:bg-opacity-10 dark:text-blue-500"
            href={"/vkkpemlie_resume_.pdf"}>📄 resume</a
          >
        </button>
        <button>
          <a
            class="text-sm rounded-lg border border-blue-200 bg-blue-100 bg-opacity-50 px-2 dark:border-green-800 dark:bg-green-300 dark:bg-opacity-10 dark:text-green-500"
            href="/blog">📝 read blog</a
          >
        </button>
      </div>
      <p>
        <a
          class="my-1 w-fit px-2 pr-3 gap-1 text-sm rounded-lg border border-blue-200 bg-blue-100 bg-opacity-50 dark:border-blue-800 dark:bg-green-300 dark:bg-opacity-10 dark:text-blue-500 text-blue-400 flex flex-row hover:text-blue-300 items-center"
          href="https://t.me/thelocalgodd"
          target="_blank"
        >
          <TelegramIcon />
          telegram channel
        </a>
      </p>
    </div>
  </section>

  <section
    class="py-5 rounded-xl mx-auto w-[350px] md:w-full md:mx-auto text-sm"
  >
    <p class="text-zinc-600 dark:text-zinc-400">💻 Tools & Technologies</p>
    <p>
      <div class="my-2 flex flex-col md:flex-row">
        <span
          class="w-fit mb-2 md:mb-0 text-sm rounded-lg border border-green-200 bg-green-100 bg-opacity-50 px-2 mr-1 dark:border-green-800 dark:bg-green-300 dark:bg-opacity-10 dark:text-green-500"
          >Languages</span
        >
        HTML, CSS, Javascript, Python, Bash
      </div>
      <div class="my-2 flex flex-col md:flex-row">
        <span
          class="w-fit mb-2 md:mb-0 text-sm rounded-lg border border-blue-200 bg-blue-100 bg-opacity-50 px-2 mr-1 dark:border-blue-800 dark:bg-blue-300 dark:bg-opacity-10 dark:text-blue-500"
          >Frameworks</span
        >
        ReactJS, Astro, NodeJS, ExpressJS
      </div>
      <div class="my-2 flex flex-col md:flex-row">
        <span
          class="w-fit mb-2 text-sm md:mb-0 rounded-lg border border-zinc-400 bg-zinc-400 bg-opacity-40 px-2 mr-1 dark:border-zinc-500 dark:bg-zinc-300 dark:bg-opacity-10 dark:text-zinc-500"
          >Tools</span
        >
        Git, Github, Photoshop, Figma, VSCode, Linux
      </div>
    </p>
  </section>

  <section
    class="py-5 rounded-xl mx-auto w-[350px] md:w-full md:mx-auto text-sm"
  >
    <p class="text-zinc-600 dark:text-zinc-400">📃 Featured Post</p>
    <div>
      {
        (
          <BlogPost
            title={blogPosts[0].frontmatter.title}
            date={formatDate(blogPosts[0].frontmatter.pubDate)}
            post={blogPosts[0].url}
          />
        )
      }
    </div>
  </section>

  <section id="featured-projects" class="py-5 rounded-xl my-5 mx-auto">
    <p
      class="text-zinc-600 text-sm dark:text-zinc-400 flex justify-center md:justify-start"
    >
      🧑‍🌾 Featured Projects
    </p>
    <div
      class="grid md:grid-cols-3 items-center md:items-start justify-center md:flex-row"
    >
      {
        projectItems.slice(0, 2).map((project) => (
          <ProjectCard
        title={project.title}
        description={project.description}
        link={project.link}
        tag={project.tag}
          />
        ))
      }
    </div>

    <p class="my-1 flex text-sm justify-center md:justify-start mt-5">
      🔗 | all projects here<a href="/projects"
        ><u class="underline-offset-4 hover:text-zinc-600 ml-1">here</u></a
      >
    </p>

    <!-- <p
      class="flex mt-5 text-xs text-gray-400 border-r border-dotted border-red-400 w-fit px-4 mx-auto"
    >
      see you space cowboy...
    </p> -->

    <p
      class="flex mt-5 text-xs text-gray-400 border-r border-l border-dotted border-red-400 w-fit px-4 mx-auto"
    >
      美しいものを求めて - in search of something beautiful
    </p>
  </section>
</BaseLayout>
